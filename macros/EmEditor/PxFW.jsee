		$TXT = $TXT.replace( new RegExp( "<", "gi" ) , '&lt;' );
		$TXT = $TXT.replace( new RegExp( ">", "gi" ) , '&gt;' );
		$TXT = $TXT.replace( new RegExp( "\"", "gi" ) , '&quot;' );
